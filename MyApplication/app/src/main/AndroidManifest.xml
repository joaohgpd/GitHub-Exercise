<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joao.myapplication">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RepositoryActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.joao.myapplication.activity.MainActivity"/></activity>
        <activity android:name=".activity.UserActivity"> <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.joao.myapplication.activity.MainActivity"/></activity>
        <activity android:name=".activity.UserDescActivity"></activity>
        <activity android:name=".activity.RepDescActivity"></activity>
    </application>

</manifest>
